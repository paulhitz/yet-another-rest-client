{
  "manifest_version": 2,
  "name": "YARC - Yet Another REST Client",
  "version": "0.0.1",

  "description": "YARC - Yet Another REST Client. A tool for testing REST services.",
  "short_name": "YARC! Yet Another REST Client",
  "author": "Paul Hitz",

  "icons": { "16": "img/logo_16x16.png",
             "48": "img/logo_48x48.png",
             "128": "img/logo_128x128.png"
  },

  "background": {
    "scripts": ["extension/background.js"]
  },

  "incognito": "split",

  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "cookies",
    "storage",
    "unlimitedStorage"
  ],

  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "19": "img/logo_19x19.png",
      "38": "img/logo_38x38.png"
    }
  }
}
