{
  "manifest_version": 2,
  "name": "D&B Services REST Client",
  "version": "1.1.2",

  "description": "This tool allows a user to easily test the status of various D&B REST Services.",
  "short_name": "D&B Services",
  "author": "Paul Hitz",

  "icons": { "16": "img/logo_16x16.png",
             "48": "img/logo_48x48.png",
             "128": "img/logo_128x128.png"
  },

  "background": {
    "scripts": ["extension/background.js"]
  },

  "incognito": "split",

  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "cookies",
    "storage",
	"unlimitedStorage"
  ],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "19": "img/logo_19x19.png",
      "38": "img/logo_38x38.png"
    }
  }
}